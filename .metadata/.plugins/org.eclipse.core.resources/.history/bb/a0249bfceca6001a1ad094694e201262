package com.bit.day23;

import java.awt.Button;
import java.awt.Frame;

public class Ex09 extends Frame {
	// 절대좌표
	
	public Ex09() {
		setLayout(null);
		Button btn1 = new Button("버튼");
		btn1.setSize(200, 200);
		btn1.setLocation(100, 100);
		
		add(btn1);
		setSize(500, 500);
		setLocation(200, 200);
		setVisible(true);
	}
	
	public static void main(String[] args) {
		
	}
}
